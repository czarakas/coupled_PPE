	author = {Hawkins, Linnia R. and Rupp, David E. and McNeall, Doug J. and Li, Sihan and Betts, Richard A. and Mote, Philip W. and Sparrow, Sarah N. and Wallom, David C. H.},
	year = {2019},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2018MS001577},
	keywords = {dynamic global vegetation models, carbon allocation, parameter uncertainty, sensitivity analysis, statistical emulator, vegetation transitions},
	pages = {2787--2813},
