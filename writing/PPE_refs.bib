	keywords = {Amazon rainforest, climate uncertainty, committed response, HadCM3C, physics-perturbed ensemble},
	pages = {5032--5044},
	file = {Full Text PDF:/Users/cmzarakas/Zotero/storage/EIP9QKYZ/Boulton et al. - 2017 - Exploring uncertainty of Amazon dieback in a pertu.pdf:application/pdf;Snapshot:/Users/cmzarakas/Zotero/storage/ZFS28323/gcb.html:text/html},
